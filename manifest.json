{
    "manifest_version": 3,
    "name": "Hello Pika!",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extensions.png",
        "default_title": "Open the popup"
    },
    "background": {
        "service_worker": "dist/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.js"
            ],
            "type": "module"
        }
    ],
    "side_panel": {
        "default_path": "sidePanel.html"
    },
    "permissions": [
        "activeTab",
        "sidePanel",
        "storage",
        "contextMenus",
        "history",
        "tabs",
        "webNavigation",
        "alarms"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}